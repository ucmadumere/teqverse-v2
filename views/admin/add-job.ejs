  <div class="outer-body">
    <div class="inner-body">
      <div class="content-body">
        <div class="container-fluid">
          <!-- row -->
          <div class="row">
            <div class="col-xl-12 col-xxl-12">
              <div class="card">
                <div class="card-header">
                  <h4 class="card-title">Add New Job</h4>
                </div>
                <div class="card-body">
                  <div class="container mt-3">
                    <form action="/add-job" method="POST">
                      <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="title" name="title" placeholder="Enter title">
                      </div>

                      <div class="mb-3">
                        <label for="companyName" class="form-label">Organization</label>
                        <input type="text" class="form-control" id="companyName" name="companyName"
                          placeholder="Company Name">  
                      </div>

                      <div class="mb-3">
                        <label for="salaryRange" class="form-label">Salary Range</label>
                        <input type="text" class="form-control" id="salaryRange" name="salaryRange"
                          placeholder="0 - N1,000,000">  
                      </div>

                      <div class="mb-3">
                        <label for="experience" class="form-label">Experience</label>
                        <input type="number" class="form-control" id="experience" name="experience"
                          placeholder="Enter years of experience">
                      </div>

                      <div class="mb-3">
                        <label for="jobLocation" class="form-label">Location</label>
                        <input type="text" class="form-control" id="jobLocation" name="jobLocation"
                          placeholder="Enter location">
                      </div>

                      <div class="mb-3">
                        <label for="jobType" class="form-label">Job Type</label>
                        <select class="form-select" name="jobType" id="jobType">
                          <option value="">--Please choose an option--</option>
                          <option value="Hybrid">Hybrid</option>
                          <option value="Onsite">Onsite</option>
                          <option value="Remote">Remote</option>
                        </select>
                      </div>

                      <div class="mb-3">
                        <label for="workType" class="form-label">Work Type</label>
                        <select class="form-select" name="workType" id="workType">
                          <option value="">--Please choose an option--</option>
                          <option value="Contract">Contract</option>
                          <option value="Full Time">Full Time</option>
                          <option value="Part Time">Part Time</option>
                          <option value="Internship">Internship</option>
                        </select>
                      </div>

                      <!-- <div class="mb-3">
                        <label for="jobOverview" class="form-label">Job Overview</label>
                        <textarea class="form-control" id="jobOverview" rows="4" name="jobOverview"
                          placeholder="Enter Job Overview"></textarea>
                      </div> -->

                      <div class="mb-3">
                        <label for="skills" class="form-label">Skills Needed</label>
                        <input type="text" class="form-control" id="skills" name="skills" placeholder="Python, Backend...">
                      </div>

                      <div class="form-group">
                        <label for="jobDescription">Job Description</label>
                        <textarea class="form-control" id="jobDescription" name="jobDescription" required></textarea>
                    </div>
                    <div class="mb-3">
                      <label for="closingDate" class="form-label">Closing Date</label>
                      <input type="date" class="form-control" id="closingDate" name="closingDate"
                          placeholder="Not Specified or Date (1st January, 2000)">
                  </div>
                  
                    <div class="form-group">
                      <label for="methodOfApplication">Method Of Application</label>
                      <textarea class="form-control" id="methodOfApplication" name="methodOfApplication" required></textarea>
                  </div>


                      <!--  Job category Section-->

                      <div class="form-container">
                        <label for="jobCategory" class="form-label">Job Category:</label>
                        <select name="jobCategory" id="jobCategory" class="form-select">
                          <option value="Regular">Regular</option>
                          <option value="Premium">Premium</option>
                        </select>
                      </div>
                      <!-- Job category section -->

                      <!-- Submit section -->
                      <div class="pt-3">
                        <button type="submit" class="btn btn-primary submit-btn ">Submit</button>
                      </div>
                      <!-- Submit section -->
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
