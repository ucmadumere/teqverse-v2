<div class="admin-title">
  <h2>Add New Post</h2>
</div>

<form action="/add-job" method="POST">

  <label for="title"><b>Title</b></label>
  <input type="text" placeholder="Post Title" name="title">

  <label for="experience"><b>Experience</b></label>
  <input type="number" placeholder="experience" name="experience">

  <label for="jobLocation"><b>Location</b></label>
  <input type="text" placeholder="Post Title" name="jobLocation">

  <label for="jobType">Job Type:</label>

  <select name="jobType" id="">
    <option value="">--Please choose an option--</option>
    <option value="hybrid">Hybrid</option>
    <option value="onsite">Onsite</option>
    <option value="remote">Remote</option>
  </select>


  <label for="body"><b>Content</b></label>
  <textarea name="body" cols="50" rows="10"></textarea>

  <!-- <input type="submit" value="Add" class="btn"> -->
  <button type="submit">Add</button>

</form>