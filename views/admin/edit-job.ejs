<div class="admin-title">
  <h2>View / Edit Post</h2>

  <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete" class="btn-delete btn">
  </form>

</div>

<form action="/edit-job/<%= data._id %>?_method=PUT" method="POST">

  <label for="title"><b>Title</b></label>
  <input type="text" placeholder="Post Title" name="title" id="title" value="<%= data.title %>">

  <label for="experience"><b>Experience</b></label>
  <input type="number" placeholder="experience" name="experience" id="experience" value="<%= data.experience %>">

  <label for="jobLocation"><b>Location</b></label>
  <input type="text" placeholder="Post Title" name="jobLocation" id="jobLocation" value="<%= data.jobLocation %>">

  <label for="jobType">Job Type:</label>

  <select name="jobType" id="jobType">
    <!-- <option value="">--Please choose an option--</option> -->
    <option value="hybrid">Hybrid</option>
    <option value="onsite">Onsite</option>
    <option value="remote">Remote</option>
  </select>

  <label for="body"><b>Content</b></label>
  <textarea name="body" cols="50" rows="10"><%= data.body %></textarea>

  <input type="submit" value="Update" class="btn">

</form>