<!-- Start Breadcrumb 
    ============================================= -->
<div class="breadcrumb-area bg-gray text-center shadow dark text-light bg-cover"
    style="background-image: url(/img/banner/12.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h1>All Recommended Jobs for you</h1>
                <ul class="breadcrumb">
                    <li><a href="#"><i class="fas fa-home"></i> Home</a></li>
                    <li class="active">Recommended Jobs</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumb -->

<!-- Start Blog
    ============================================= -->
<div class="blog-area full-blog default-padding">
    <div class="container">
        <div class="">
            <div class="blog-items">
                <div class="blog-content col-12 col-lg-12">
                    <% recommendedJobs.forEach(recommendedJob=> { %>
                        <div class="blog-item-box">
                            <!-- Single Item -->

                            <div class="single-item">
                                <div class="item">
                                    <div class="info">

                                        <div class="">
                                            <div class="">
                                                <span class="post-date"><i class="fas fa-clock"></i>
                                                    <%= recommendedJob.createdAt.toDateString() %>
                                                </span>
                                            </div>
                                            <a href="/jobdetails/<%= recommendedJob._id %>">
                                                <%= recommendedJob.title %>
                                            </a>
                                        </div>


                                    </div>
                                </div>
                            </div>

                            <!-- End Single Item -->

                        </div>
                        <% }) %>

                            <!-- Pagination -->
                            <div class="row">
                                <div class="col-md-12 pagi-area text-center">
                                    <nav aria-label="navigation">
                                        <ul class="pagination">

                                            <% if (currentPage > 1) { %>
                                                <li class="page-item"><a class="page-link" href="?page=<%= currentPage - 1 %>"><i class="fas fa-angle-double-left"></i></a></li>
                                              <% } %>
                                      
                                              <% for (let i = 1; i <= totalPages; i++) { %>
                                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                  <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                                </li>
                                              <% } %>
                                      
                                              <% if (currentPage < totalPages) { %>
                                                <li class="page-item"><a class="page-link" href="?page=<%= currentPage + 1 %>"><i class="fas fa-angle-double-right"></i></a></li>
                                              <% } %>
                                              




                                        </ul>
                                    </nav>
                                </div>
                            </div>


                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Blog -->