<!-- Start Breadcrumb 
    ============================================= -->
<div class="breadcrumb-area bg-gray text-center shadow dark text-light bg-cover"
style="background-image: url(/img/banner/12.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h1>All Recommended Jobs for you</h1>
                <ul class="breadcrumb">
                    <li><a href="#"><i class="fas fa-home"></i> Home</a></li>
                    <li class="active">Recommended Jobs</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumb -->

<!-- Start Blog
    ============================================= -->
<div class="blog-area full-blog default-padding">
    <div class="container">
        <div class="row">
            <div class="blog-items">
                <div class="blog-content col-lg-10 offset-lg-1">
                    <div class="blog-item-box">
                        <!-- Single Item -->
                        <% recommendedJobs.forEach(recommendedJob => { %>
                        <div class="single-item">
                            <div class="item">
                                <div class="info">
                                            <li>
                                                <div class="">
                                                  <div class="">
                                                    <span class="post-date"><i class="fas fa-clock"></i> <%= recommendedJob.createdAt.toDateString() %></span>
                                                  </div>
                                                  <a href="/jobdetails/<%= recommendedJob._id %>"><%= recommendedJob.title %></a>
                                                </div>
                                            </li>
                                      <% }) %>
                                </div>
                            </div>
                        </div>
                        <!-- End Single Item -->
                        <% recommendedJobs.forEach(recommendedJobs=> { %>
                            <div class="single-item">
                                <div class="item">
                                    <div class="info">

                                        <div class="row d-flex justify-content-around" >
                                            <div class="col ">
                                                <span class="post-date date">
                                                    <%= recommendedJobs.createdAt.toDateString() %>
                                                </span>
                                            </div>
                                            
                                        </div>
                                        <h3 class="mt-2">
                                            <a href="/jobdetails/<%= recommendedJobs._id %>">
                                                <%= recommendedJobs.title %>
                                            </a>
                                        </h3>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>

                    <!-- Pagination -->
                    <div class="row">
                        <div class="col-md-12 pagi-area text-center">
                            <nav aria-label="navigation">
                                <ul class="pagination">
                                    <li class="page-item"><a class="page-link" href="blog-with-sidebar.html"><i
                                                class="fas fa-angle-double-left"></i></a></li>
                                    <li class="page-item active"><a class="page-link"
                                            href="blog-with-sidebar.html">1</a></li>
                                    <li class="page-item"><a class="page-link" href="blog-with-sidebar.html">2</a></li>
                                    <li class="page-item"><a class="page-link" href="blog-with-sidebar.html">3</a></li>
                                    <li class="page-item"><a class="page-link" href="blog-with-sidebar.html"><i
                                                class="fas fa-angle-double-right"></i></a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Blog -->