<!-- Start Breadcrumb 
    ============================================= -->
<div class="breadcrumb-area bg-gray text-center shadow dark text-light bg-cover"
    style="background-image: url(/img/banner/12.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h1>All Recommended Jobs for you</h1>
                <ul class="breadcrumb">
                    <li><a href="#"><i class="fas fa-home"></i> Home</a></li>
                    <li class="active">Recommended Jobs</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumb -->

<!-- Start Blog
    ============================================= -->
<div class="blog-area full-blog default-padding">
    <div class="container">
        <div class="row">
            <% recommendedJobs.forEach(recommendedJobs=> { %>
                <div class="col-lg-4 col-md-12">
                    <div class="card border border-0 custom-card">
                        <div class="card-body">
                            <div class="row d-flex justify-content-around">
                                <div class="col-8 job-title">
                                    <div class="anchor-title text-truncate">
                                        <a href="/jobdetails/<%= recommendedJobs._id %>">
                                            <%= recommendedJobs.title %>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-4 d-flex justify-content-end">
                                    <span class="jobCategory-span">
                                        <%= recommendedJobs.jobCategory %>
                                    </span>
                                </div>
                            </div>
                            <div class="mt-3">
                                <% if (recommendedJobs.workType !=='Internship' ) { %>
                                    <p>
                                        Experience: <%= recommendedJobs.experience %> years
                                    </p>
                                    <% } else { %>
                                        <p>
                                            No Experience Needed
                                        </p>
                                        <% } %>
                            </div>
                            <div class="d-grid gap-2">
                                <button class="btn btn-outline-dark butt my-2" style="font-size: 12px;">
                                    <%= recommendedJobs.workType %>
                                </button>
                                <button class="btn btn-outline-dark butt my-2" style="font-size: 12px;">
                                    <%= recommendedJobs.jobType %>
                                </button>
                                <button class="btn btn-outline-dark butt" style="font-size: 12px;">
                                    <%= recommendedJobs.jobLocation %>
                                </button>
                            </div>
                            <h6 class="mt-4">
                                <%= recommendedJobs.companyName %>
                            </h6>
                            <p>
                                <%= recommendedJobs.salaryRange %>
                            </p>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>
</div>
<!-- End Blog -->